#!/bin/sh

set -e

#Cinnamon Setup
# Update theme
sudo -Hu $1 dbus-launch gsettings set org.cinnamon.desktop.background picture-uri 'file:///usr/share/backgrounds/gnome/Godafoss_Iceland.jpg'
sudo -Hu $1 dbus-launch gsettings set org.cinnamon.desktop.wm.preferences theme 'Ambiance-Crunchy'
sudo -Hu $1 dbus-launch gsettings set org.cinnamon.desktop.interface gtk-theme 'Adwaita-dark'
sudo -Hu $1 dbus-launch gsettings set org.cinnamon.theme name 'Ambiance-Crunchy'
